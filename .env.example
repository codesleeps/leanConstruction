# Database Configuration
DATABASE_URL=postgresql://postgres:password@db/leandb

# Security
SECRET_KEY=your-secret-key-change-in-production-use-long-random-string

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Procore Integration (Optional)
PROCORE_CLIENT_ID=your-procore-client-id
PROCORE_CLIENT_SECRET=your-procore-client-secret
PROCORE_ACCESS_TOKEN=your-procore-access-token

# Primavera P6 Integration (Optional)
PRIMAVERA_API_URL=https://your-primavera-instance.com/api
PRIMAVERA_USERNAME=your-username
PRIMAVERA_PASSWORD=your-password

# AWS Configuration (Optional - for cloud deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lean-construction-data

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Unattended Execution & YOLO Mode
YOLO_MODE=false
AUTO_DEPLOY=false
AUTO_TEST=false
AUTO_VERIFY=false
AUTO_NOTIFY=false

# Deployment Configuration
AUTO_DEPLOY_BRANCH=main
DEPLOY_TRIGGER=push
MAX_DEPLOYMENT_RETRIES=3
DEPLOYMENT_TIMEOUT=3600
AUTO_ROLLBACK_ON_FAILURE=true

# Notification Settings
NOTIFICATION_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
MONITORING_ENABLED=true
